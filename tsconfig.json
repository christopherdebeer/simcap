{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "allowUnreachableCode": false,
    "noEmit": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "baseUrl": ".",
    "paths": {
      "@api": ["packages/api/src/index"],
      "@api/*": ["packages/api/src/*"],
      "@core": ["packages/core/src/index"],
      "@core/*": ["packages/core/src/*"],
      "@filters": ["packages/filters/src/index"],
      "@filters/*": ["packages/filters/src/*"],
      "@orientation": ["packages/orientation/src/index"],
      "@orientation/*": ["packages/orientation/src/*"],
      "@puck": ["packages/puck/src/index"],
      "@puck/*": ["packages/puck/src/*"]
    }
  },
  "include": [
    "api/**/*",
    "src/**/*",
    "packages/**/*",
    "apps/**/*",
    "vite.config.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
